@page
@model PomagajLocaly.Pages.Company.CreateOffer

@{
    ViewData["Title"] = "Create offer";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Add offer</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OfferModel.Name"></label>
                    <input asp-for="OfferModel.Name" class="form-control"/>
                    <span asp-validation-for="OfferModel.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OfferModel.Description"></label>
                    <input asp-for="OfferModel.Description" class="form-control"/>
                    <span asp-validation-for="OfferModel.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OfferModel.Price"></label>
                    <input asp-for="OfferModel.Price" class="form-control"/>
                    <span asp-validation-for="OfferModel.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Typ</label>
                    <select asp-for="OfferModel.OfferTypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create offer</button>
                </div>
            </form>
        </section>
    </div>
</div>