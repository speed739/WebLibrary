@page
@model PomagajLocaly.Pages.Company.Account

@{
    ViewData["Title"] = "Settings";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr/>
            <div class="form-group">
                <label asp-for="CompanyModel.Nip"></label>
                <input asp-for="CompanyModel.Nip" class="form-control"/>
                <span asp-validation-for="CompanyModel.Nip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyModel.Name"></label>
                <input asp-for="CompanyModel.Name" class="form-control"/>
                <span asp-validation-for="CompanyModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyModel.BankAccount"></label>
                <input asp-for="CompanyModel.BankAccount" class="form-control"/>
                <span asp-validation-for="CompanyModel.BankAccount" class="text-danger"></span>
            </div>
           <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>