@page
@model PomagajLocaly.Pages.Client.AddBalance

@{
    ViewData["Title"] = "AddBalance";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Add cash to your account</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserModel.Balance"></label>
                    <input asp-for="UserModel.Balance" class="form-control"/>
                    <span asp-validation-for="UserModel.Balance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>